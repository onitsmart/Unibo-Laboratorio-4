@model Laboratorio3.Web.Areas.Clienti.Clienti.EditViewModel
@{
    if (Model.Id != null)
    {
        ViewData["Title"] = "Cliente - " + Model.RagioneSocialeONominativo;
    }
    else
    {
        ViewData["Title"] = "Inserimento nuovo cliente";
    }
}
@section pageTitle{
    <nav class="navbar navbar-expand navbar-light flex-wrap">
        <div class="navbar-brand text-truncate">
            @ViewData["Title"]
        </div>
        <div class="dropdown ms-auto">
            <button class="btn btn-link dropdown-toggle" type="button" id="dropdownMenuVaiA" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Collegamenti rapidi</button>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownMenuVaiA">
                <a href="#" class="dropdown-item">Fatture</a>
                <a href="#" class="dropdown-item">Ordini</a>
                <div class="dropdown-divider"></div>
                <a href="#" class="dropdown-item">Altre cose interessanti</a>
            </div>
        </div>
        @if (Model.Id != null)
        {
            <div class="dropdown">
                <button class="btn btn-light ms-2" type="button" id="dropdownMenuAltreAzioni" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false" title="Altre azioni"><i class="fa-solid fa-ellipsis-vertical"></i></button>

                <div class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownMenuAltreAzioni">
                    <h6 class="dropdown-header">Altre azioni</h6>
                    <button class="dropdown-item" type="button">Emetti fatture</button>
                    <div class="dropdown-divider"></div>
                    <button class="dropdown-item text-danger" type="button" onclick="document.getElementById('delete-form').submit();">
                        <i class="fa-solid fa-trash"></i>&nbsp;Elimina
                    </button>
                    <form hidden autocomplete="off" id="delete-form" method="post" action="@Url.Action(MVC.Clienti.Clienti.Delete())">
                        <input type="hidden" asp-for="Id" />
                    </form>
                </div>
            </div>
        }
        <button type="button" class="btn btn-success ms-2 px-4" onclick="document.getElementById('edit-form-submitter').click()"><span class="d-inline d-sm-none"><i class="fa-solid fa-floppy-disk"></i></span><span class="d-none d-sm-inline"><i class="fa-solid fa-floppy-disk"></i>&nbsp;Salva</span></button>
    </nav>
}

@section pageSubtitle{
}

<div>
    <div class="container-lg">
        <div class="row">
            <div class="col-12">
                <form autocomplete="off" method="post" class="onit-form-sm" action="@Url.Action(MVC.Clienti.Clienti.Edit())" id="edit-form">
                    <!-- Enables form submit on Enter -->
                    <input id="edit-form-submitter" class="d-none" type="submit" />
                    <fieldset class="pb-3">
                        <legend class="sticky-top">Infomazioni generali</legend>

                        <div class="row">
                            <div class="form-group col-md-6 col-lg-8 col-xl-6">
                                <label asp-for="RagioneSocialeONominativo"></label>
                                <input class="form-control form-control-sm" asp-for="RagioneSocialeONominativo">
                                <span asp-validation-for="RagioneSocialeONominativo" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-3 col-lg-4 col-xl-3">
                                <label asp-for="Stato"></label>
                                <select class="form-select form-select-sm" asp-for="Stato" asp-items="Model.StatiCliente"></select>
                                <span asp-validation-for="Stato" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-6 col-lg-4 col-xl-3">
                                <label asp-for="CapitaleSociale"></label>
                                <input class="form-control form-control-sm" asp-for="CapitaleSociale">
                                <span asp-validation-for="CapitaleSociale" class="text-danger"></span>
                            </div>
                        </div>
                    </fieldset>
                    <fieldset class="pb-3">
                        <legend class="sticky-top">Dati di fatturazione</legend>

                        <div class="row">
                            <div class="form-group col-md-6 col-lg-8 col-xl-6">
                                <label asp-for="RagioneSocialeFatturazione"></label>
                                <input class="form-control form-control-sm" asp-for="RagioneSocialeFatturazione">
                                <span asp-validation-for="RagioneSocialeFatturazione" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-6 col-lg-4 col-xl-3">
                                <label asp-for="PIVA"></label>
                                <input class="form-control form-control-sm" asp-for="PIVA">
                                <span asp-validation-for="PIVA" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-6 col-lg-4 col-xl-3">
                                <label asp-for="Indirizzo"></label>
                                <input class="form-control form-control-sm" asp-for="Indirizzo">
                                <span asp-validation-for="Indirizzo" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-6 col-lg-4 col-xl-3">
                                <label asp-for="CAP"></label>
                                <input class="form-control form-control-sm" asp-for="CAP">
                                <span asp-validation-for="CAP" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-6 col-lg-4 col-xl-3">
                                <label asp-for="Comune"></label>
                                <input class="form-control form-control-sm" asp-for="Comune">
                                <span asp-validation-for="Comune" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-6 col-lg-4 col-xl-3">
                                <label asp-for="Provincia"></label>
                                <input class="form-control form-control-sm" asp-for="Provincia">
                                <span asp-validation-for="Provincia" class="text-danger"></span>
                            </div>
                        </div>
                    </fieldset>
                    <fieldset class="pb-3">
                        <legend class="sticky-top">Altre informazioni</legend>

                        <div class="row">
                            <div class="form-group col-md-6 col-lg-8 col-xl-6">
                                <label asp-for="Note"></label>
                                <textbox class="form-control form-control-sm" asp-for="Note">
                                    <span asp-validation-for="Note" class="text-danger"></span>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>
