{
  "Logging": {
    // ES1-LogLevels: Modificando i valori sotto riportati, Ã¨ possibile cambiare il livello di log per la nostra applicazione.
    // I livelli di log sono: Trace, Debug, Information, Warning, Error...
    // Potete, indicando come chiave un namespace, customizzare il logLevel per singoli namespace.
    // Ad esempio, se volessi che il codice del nostro laboratorio loggasse solo errori, potrei scrivere "Laboratorio4.Web": "Error".
    "LogLevel": {
      "Default": "Trace",
      "Microsoft.AspNetCore": "Warning"
    }
  },
    "AllowedHosts": "*",
    "AppSettings": {
        "DisabilitaControlloPassword": false

        // ES2 Se avessimo un vero db
        //"ConnectionString": "data source=server;initial catalog=db;User id=username;password=pw;Persist Security Info=True;MultipleActiveResultSets=true;APP=Laboratorio4"
    }
}
