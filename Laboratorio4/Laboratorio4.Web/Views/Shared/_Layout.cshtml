@inject Microsoft.Extensions.Options.IOptions<AppSettings> appSettings
@{
    Layout = "_LayoutHtml";
    var version = System.Reflection.Assembly.GetAssembly(typeof(Startup)).GetName().Version;
}
@section metas{
    @RenderSection("metas", false)
}
@section styles{
    @RenderSection("styles", false)
}
<div id="pageId">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" href="@Url.Action(MVC.Home.Index())">Laboratorio4.Web</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="@Url.Action(MVC.Home.Index())">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="@Url.Action(MVC.Home.Privacy())">Privacy</a>
                        </li>
                        @* ES2: Decommentare le seguenti righe per abilitare il menu clienti *@
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="@Url.Action(MVC.Clienti.Clienti.Index())">Clienti</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    @RenderSection("pageTitle", false)
    @RenderSection("pageSubtitle", false)
    <main>
        @RenderBody()
    </main>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Laboratorio4.Web - <a href="@Url.Action(MVC.Home.Privacy())">Privacy</a>
        </div>
    </footer>
</div>
@section scripts{
    @* @this.RenderScriptAlertsWithToastify() *@
    @RenderSection("scripts", false)
}
